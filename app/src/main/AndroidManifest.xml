<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.example.veuge.com.saludnfc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".Variables"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PatientsActivity" />
        <activity android:name=".PatientActivity">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="ext"
                    android:pathPrefix="/saludnfc.com:mobile"
                    android:scheme="vnd.android.nfc" />
            </intent-filter>
        </activity>
        <activity android:name=".PatientFormCreateActivity" />
        <activity android:name=".HistoriesActivity" />
        <activity android:name=".ControlsActivity" />
        <activity android:name=".ConsultationsActivity" />
        <activity android:name=".HistoryActivity" />
        <activity android:name=".ControlActivity" />
        <activity android:name=".ConsultationActivity" />
        <activity android:name=".HistoryFormCreateActivity" />
        <activity android:name=".ControlFormCreateActivity" />
        <activity android:name=".ConsultationFormCreateActivity" />
        <activity android:name=".NfcWriterActivity" />
        <!--
        <activity android:name=".NfcReaderActivity">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="vnd.android.nfc"
                    android:host="ext"
                    android:pathPrefix="/saludnfc.com:mobile"/>
            </intent-filter>
        </activity>
        -->
        <activity android:name=".ContactActivity"></activity>
    </application>

</manifest>