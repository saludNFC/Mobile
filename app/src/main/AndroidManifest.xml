<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.example.veuge.com.saludnfc">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <!-- To auto-complete the email text field in the activity_login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".Variables"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.PatientsList" />
        <activity android:name=".views.PatientDetail">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="ext"
                    android:pathPrefix="/saludnfc.com:mobile"
                    android:scheme="vnd.android.nfc" />
            </intent-filter>
        </activity>
        <activity android:name=".views.HistoriesList" />
        <activity android:name=".views.ControlsList" />
        <activity android:name=".views.ConsultationsList" />
        <activity android:name=".views.LogActivity" />
        <activity android:name=".views.HistoryDetail" />
        <activity android:name=".views.ControlDetail" />
        <activity android:name=".views.ConsultationDetail" />
        <activity android:name=".views.ContactDetail" />
        <activity android:name=".views.NfcWriter" />
        <activity android:name=".views.PatientCreate" />
        <activity android:name=".views.HistoryCreate" />
        <activity android:name=".views.ControlCreate" />
        <activity android:name=".views.ConsultationCreate" />
    </application>

</manifest>